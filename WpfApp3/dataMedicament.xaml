<Window x:Class="WpfApp3.dataMedicament"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="dataMedicament" Height="450" Width="800">


    <Grid>
        <TabControl   Margin="0,49,-0.4,0"   >
            <TabItem Header="Основная информация">
                <Grid x:Name="mainGrid" Grid.Row="2" IsEnabled="True" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="174*"/>
                        <ColumnDefinition Width="619*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="Вид лекарства" Grid.Column="0" Grid.Row="0" Name="col22"></TextBlock>
                    <TextBox Name="Med_Type" Grid.Row="0" Grid.Column="1" Margin="0" HorizontalContentAlignment="Center" TextChanged="Med_Type_TextChanged"/>

                    <TextBlock Grid.Row="1" Text="Производитель" VerticalAlignment="Center" HorizontalAlignment="Center" ></TextBlock>
                    <TextBox Name="MedManafacturer" Grid.Row="1" Grid.Column="1" Margin="0"/>
                    <TextBlock Grid.Row="2" Text="Наличие рецепта" VerticalAlignment="Center" HorizontalAlignment="Center" ></TextBlock>
                    <TextBox Name="MedRecep" Grid.Row="2" Grid.Column="1" Margin="0"/>
                    <TextBlock Grid.Row="3" Text="Форма выпуска" VerticalAlignment="Center" HorizontalAlignment="Center" ></TextBlock>
                    <TextBox Name="MedApperence" Grid.Row="3" Grid.Column="1" Margin="0"/>
                    <TextBlock Grid.Row="4" Text="Срок годности" VerticalAlignment="Center" HorizontalAlignment="Center" ></TextBlock>
                    <TextBox Name="Date" Grid.Row="4" Grid.Column="1" Margin="0"/>
                </Grid>

            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <Label Content="Состав" MouseLeftButtonDown="Label_MouseLeftButtonDown"/>

                </TabItem.Header>
                <Grid x:Name="Composition_grid" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="174*"/>
                        <ColumnDefinition Width="619*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="174*"/>
                        <RowDefinition Height="619*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Состав" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                    <TextBox Grid.Row="0" Grid.Column="1" Name="Composition"></TextBox>
                </Grid>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <Label Content="Фармакологическое действие" MouseLeftButtonDown="Label_MouseLeftButtonDown_1"/>
                </TabItem.Header>
                <TextBox HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Name="FarmAction" Text="vsd"/>

            </TabItem>


            <TabItem>
                <TabItem.Header>
                    <Label Content="Особые указания" MouseLeftButtonDown="Label_MouseLeftButtonDown_2"/>
                </TabItem.Header>
                <TextBox HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Name="MedInduction" />

            </TabItem>


            <TabItem>
                <TabItem.Header>
                    <Label Content="Противопоказания" MouseLeftButtonDown="Label_MouseLeftButtonDown_3"/>
                </TabItem.Header>
                <TextBox HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Name="Contraindications" />

            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <Label Content="Побочные эффекты" MouseLeftButtonDown="Label_MouseLeftButtonDown_5"/>
                </TabItem.Header>
                <TextBox HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Name="SideEffect" />

            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <Label Content="Способ применения и дозы" MouseLeftButtonDown="Label_MouseLeftButtonDown_4"/>
                </TabItem.Header>
                <TextBox HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Name="MethodDose" />

            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <Label Content="Передозировка" MouseLeftButtonDown="Label_MouseLeftButtonDown_6"/>
                </TabItem.Header>
                <TextBox Name="overDose"></TextBox>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <Label Content="Болезнь" MouseLeftButtonDown="Label_MouseLeftButtonDown_7"/>
                </TabItem.Header>
                <TextBox HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Name="Disease" />

            </TabItem>

        </TabControl>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Название" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox HorizontalAlignment="Center" Height="23" Margin="81,9,442.6,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="270" Name="medName" TextChanged="MedName_TextChanged"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Поиск" VerticalAlignment="Top" Margin="386,9,0,0"/>
        <TextBox HorizontalAlignment="Center" Height="23" Margin="437,8,86.6,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="270" x:Name="findText" TextChanged="MedName_TextChanged"/>
        <Button Content="Найти" HorizontalAlignment="Right" Margin="0,7,-0.4,0" VerticalAlignment="Top" Width="63" Height="21" RenderTransformOrigin="0.347,1.153" Click="Button_Click"/>
    </Grid>




